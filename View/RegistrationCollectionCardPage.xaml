<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memorize.View.RegistrationCollectionCardPage"
             Title="Registration Card">
    <StackLayout Margin="40">
        <VerticalStackLayout >
            <Editor Text="{Binding RegistrationCollectionCard.InitalSide}" Placeholder="Inital side card" HeightRequest="150" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Editor Text="{Binding RegistrationCollectionCard.ReverseSide}" Placeholder="Reverse side card" HeightRequest="150" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </VerticalStackLayout>

        <Button Text="Save" Command="{Binding AddUpdateCollectionCardCommand}"/>
    </StackLayout>
</ContentPage>